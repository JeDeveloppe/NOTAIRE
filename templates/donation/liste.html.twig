{% extends 'base.html.twig' %}

{% block title %}Gestion des Donations{% endblock %}

{% block body %}
<div class="container py-5">
    {# --- FIL D'ARIANE / RETOUR --- #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="{{ path('app_family_dashboard') }}" class="text-muted text-decoration-none fw-medium">
            <i class="fas fa-chevron-left me-2"></i>Retour au tableau de bord
        </a>
        <h1 class="h3 fw-bold mb-0 text-dark">Gestion des donations</h1>
    </div>

    {# --- CARTE PRINCIPALE --- #}
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white py-4 px-4 d-flex justify-content-between align-items-center border-bottom-0">
            <div>
                <h5 class="mb-0 fw-bold text-dark">Journal historique</h5>
                <p class="text-muted small mb-0">Liste exhaustive des actes enregistrés</p>
            </div>
            {# BOUTON DÉCLENCHEUR MODALE #}
            <button type="button" class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold" data-bs-toggle="modal" data-bs-target="#modalNewDonation">
                <i class="fas fa-plus-circle me-2"></i>Nouveau don
            </button>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr class="text-muted small text-uppercase">
                        <th class="ps-4 border-0" style="letter-spacing: 0.05em;">Date</th>
                        <th class="border-0" style="letter-spacing: 0.05em;">Donateur</th>
                        <th class="border-0" style="letter-spacing: 0.05em;">Bénéficiaire</th>
                        <th class="border-0" style="letter-spacing: 0.05em;">Montant</th>
                        <th class="text-end pe-4 border-0" style="letter-spacing: 0.05em;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for donation in donations %}
                        <tr class="donation-row">
                            <td class="ps-4 text-muted">
                                {{ donation.createdAt|date('d/m/Y') }}
                            </td>
                            <td>
                                <span class="fw-bold text-dark">{{ donation.donor.firstname }}</span>
                                <span class="text-muted small d-block">{{ donation.donor.lastname|upper }}</span>
                            </td>
                            <td>
                                <span class="text-dark">{{ donation.beneficiary.firstname }}</span>
                                <span class="text-muted small d-block">{{ donation.beneficiary.lastname|upper }}</span>
                            </td>
                            <td>
                                <span class="badge bg-primary-subtle text-primary px-3 py-2 rounded-pill fw-bold" style="font-size: 0.9rem;">
                                    {{ donation.amount|number_format(0, ',', ' ') }} €
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a href="{{ path('app_donation_edit', {'id': donation.id}) }}" 
                                       class="btn btn-sm btn-white border rounded-pill px-3 text-primary shadow-xs">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_donation_delete', {'id': donation.id}) }}" 
                                          onsubmit="return confirm('Supprimer cette donation ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ donation.id) }}">
                                        <button class="btn btn-sm btn-outline-danger rounded-pill px-3 shadow-xs">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        {# ... État vide ... #}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{# --- LA MODALE --- #}
<div class="modal fade" id="modalNewDonation" tabindex="-1" aria-labelledby="modalNewDonationLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow rounded-4">
            <div class="modal-header border-0 pt-4 px-4">
                <div class="d-flex align-items-center">
                    <div class="icon-shape bg-primary-subtle text-primary rounded-3 p-3 me-3">
                        <i class="fas fa-hand-holding-usd fa-lg"></i>
                    </div>
                    <div>
                        <h5 class="modal-title fw-bold" id="modalNewDonationLabel">Enregistrer une donation</h5>
                        <p class="text-muted small mb-0">Complétez les informations fiscales de l'acte</p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                {# On appelle le controller qui génère le formulaire de création #}
                {{ render(controller('App\\Controller\\DonationController::new')) }}
            </div>
        </div>
    </div>
</div>

<style>
    .bg-primary-subtle { background-color: #eef2ff !important; }
    .text-primary { color: #4f46e5 !important; }
    .btn-white { background-color: #ffffff; border-color: #e2e8f0; }
    .btn-white:hover { background-color: #f8fafc; border-color: #cbd5e1; }
    .icon-shape { width: 48px; height: 48px; display: flex; align-items: center; justify-content: center; }
    .donation-row:hover { background-color: #fcfdfe; }
</style>
{% endblock %}