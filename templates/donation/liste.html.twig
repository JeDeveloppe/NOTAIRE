{% extends 'base.html.twig' %}

{% block title %}Gestion des Donations{% endblock %}

{% block body %}
<div class="container py-5">
    {# --- ENTÊTE & RETOUR --- #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="{{ path('app_family_dashboard') }}" class="text-muted text-decoration-none fw-medium">
            <i class="fas fa-chevron-left me-2"></i>Retour au tableau de bord
        </a>
        <h1 class="h3 fw-bold mb-0 text-dark">Gestion des donations</h1>
    </div>

    {# --- LISTE DES DONS --- #}
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white py-4 px-4 d-flex justify-content-between align-items-center border-bottom-0">
            <div>
                <h5 class="mb-0 fw-bold text-dark">Journal historique</h5>
                <p class="text-muted small mb-0">Liste des actes enregistrés pour votre famille</p>
            </div>
            <button type="button" class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold" data-bs-toggle="modal" data-bs-target="#modalNewDonation">
                <i class="fas fa-plus-circle me-2"></i>Nouveau don
            </button>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr class="text-muted small text-uppercase">
                        <th class="ps-4 border-0">Date de l'acte</th>
                        <th class="border-0">Donateur</th>
                        <th class="border-0">Bénéficiaire</th>
                        <th class="border-0">Montant</th>
                        <th class="border-0">Créé le</th>
                        <th class="text-end pe-4 border-0">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for donation in donations %}
                        <tr class="donation-row">
                            <td class="ps-4 text-muted">
                                {{ donation.donateAt|date('d/m/Y') }}
                            </td>
                            <td>
                                <span class="fw-bold text-dark">{{ donation.donor.firstname }}</span>
                                <span class="text-muted small d-block">{{ donation.donor.lastname|upper }}</span>
                            </td>
                            <td>
                                <span class="text-dark">{{ donation.beneficiary.firstname }}</span>
                                <span class="text-muted small d-block">{{ donation.beneficiary.lastname|upper }}</span>
                            </td>
                            <td>
                                <span class="badge bg-primary-subtle text-primary px-3 py-2 rounded-pill fw-bold">
                                    {{ donation.amount|number_format(0, ',', ' ') }} €
                                </span>
                            </td>
                             <td class="ps-4 text-muted">
                                {{ donation.createdAt|date('d/m/Y') }}
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    {# BOUTON MODIFIER #}
                                    <a href="{{ path('app_donation_edit', {'id': donation.id}) }}" 
                                       class="btn btn-sm btn-white border rounded-pill px-3 text-primary shadow-xs">
                                        <i class="fas fa-pen"></i>
                                    </a>

                                    {# BOUTON SUPPRIMER (DÉCLENCHEUR MODALE) #}
                                    <button type="button" 
                                            class="btn btn-sm btn-outline-danger rounded-pill px-3 shadow-xs"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#modalDeleteDonation"
                                            data-donation-id="{{ donation.id }}"
                                            data-donation-info="{{ donation.donor.firstname }} vers {{ donation.beneficiary.firstname }} ({{ donation.amount|number_format(0, ',', ' ') }}€)"
                                            data-csrf="{{ csrf_token('delete' ~ donation.id) }}">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <i class="fas fa-hand-holding-usd fa-3x text-light mb-3"></i>
                                <p class="text-muted italic">Aucun don enregistré pour le moment.</p>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{# --- MODALE DE CRÉATION (Nouveau Don) --- #}
<div class="modal fade" id="modalNewDonation" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow rounded-4">
            <div class="modal-header border-0 pt-4 px-4">
                <h5 class="modal-title fw-bold">Enregistrer une donation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                {# Appelle l'action new du controller sans header/footer #}
                {{ render(path('app_donation_new')) }}
            </div>
        </div>
    </div>
</div>

{# --- MODALE DE SUPPRESSION --- #}
<div class="modal fade" id="modalDeleteDonation" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow rounded-4">
            <div class="modal-body p-4 text-center">
                <div class="icon-shape bg-danger-subtle text-danger rounded-circle mb-4 mx-auto" style="width: 70px; height: 70px; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-exclamation-triangle fa-2x"></i>
                </div>
                <h4 class="fw-bold text-dark mb-2">Supprimer ce don ?</h4>
                <p class="text-muted mb-4">
                    Cette action est irréversible. Le don de <strong id="delete-info" class="text-dark"></strong> sera définitivement retiré.
                </p>
                
                <form id="delete-form" method="post" action="">
                    <input type="hidden" name="_token" id="delete-token" value="">
                    <div class="d-flex gap-2 justify-content-center">
                        <button type="button" class="btn btn-light rounded-pill px-4 fw-bold" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold shadow-sm">Supprimer définitivement</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-primary-subtle { background-color: #eef2ff !important; }
    .bg-danger-subtle { background-color: #fef2f2 !important; }
    .text-primary { color: #4f46e5 !important; }
    .btn-white { background-color: #ffffff; border-color: #e2e8f0; }
    .btn-white:hover { background-color: #f8fafc; }
    .shadow-xs { box-shadow: 0 1px 2px rgba(0,0,0,0.05); }
    .donation-row:hover { background-color: #fcfdfe; }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const deleteModal = document.getElementById('modalDeleteDonation');
        if (deleteModal) {
            deleteModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                
                // Récupération des données du bouton
                const id = button.getAttribute('data-donation-id');
                const info = button.getAttribute('data-donation-info');
                const csrf = button.getAttribute('data-csrf');
                
                // Injection dans la modale
                document.getElementById('delete-info').textContent = info;
                document.getElementById('delete-token').value = csrf;
                
                // Mise à jour de l'URL du formulaire avec le préfixe /famille/donation
                const form = document.getElementById('delete-form');
                form.action = '/famille/donation/supprimer/' + id;
            });
        }
    });
</script>
{% endblock %}