{% extends 'base.html.twig' %}

{% block title %}Nouvelle personne{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-7">
            
            {# --- NAVIGATION DISCRÈTE --- #}
            <nav class="mb-4">
                <a href="{{ path('app_family_dashboard') }}" class="text-decoration-none text-muted small fw-bold hover-translate-x d-inline-flex align-items-center">
                    <i class="fas fa-arrow-left me-2"></i>RETOUR À LA LISTE
                </a>
            </nav>

            {# --- HEADER ÉPURÉ (PLUS DE BANDEAU NOIR) --- #}
            <div class="text-center mb-5">
                {% if is_first %}
                    <div class="onboarding-badge mb-3">
                        <i class="fas fa-star me-2"></i>Première étape
                    </div>
                    <h1 class="display-6 fw-black text-dark">Initialisez votre famille</h1>
                    <p class="text-muted mx-auto" style="max-width: 500px;">
                        Créez le profil pivot de votre arbre. C'est à partir de cette personne que vos simulations fiscales prendront racine.
                    </p>
                {% else %}
                    <h1 class="display-6 fw-black text-dark">Nouveau membre</h1>
                    <p class="text-muted">Ajoutez une personne pour compléter votre stratégie de transmission.</p>
                {% endif %}
            </div>

            {# --- CARTE DE FORMULAIRE "GLASS-STYLE" --- #}
            <div class="card border-0 shadow-smooth rounded-5 bg-white">
                <div class="card-body p-4 p-lg-5">
                    
                    {# Petit rappel visuel interne si c'est la 1ère personne #}
                    {% if is_first %}
                        <div class="d-flex align-items-center mb-4 p-3 rounded-4 bg-indigo-subtle border border-indigo-light">
                            <div class="icon-circle-sm bg-indigo text-white me-3">
                                <i class="fas fa-info"></i>
                            </div>
                            <span class="small fw-bold text-indigo">Ce profil sera défini comme votre "Sujet Zéro" (Pivot).</span>
                        </div>
                    {% endif %}

                    {{ include('family/person/_form.html.twig', {
                        'button_label': is_first ? 'Lancer ma stratégie' : 'Enregistrer le profil',
                        'button_class': 'btn btn-ux-primary w-100 py-3 rounded-4 fw-bold mt-3'
                    }) }}
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    :root {
        --indigo: #4f46e5;
        --indigo-light: #c7d2fe;
        --indigo-subtle: #f5f7ff;
    }

    .fw-black { font-weight: 850; letter-spacing: -0.02em; }
    
    /* Carte Ombre Douce */
    .shadow-smooth {
        box-shadow: 0 10px 40px -10px rgba(0,0,0,0.05), 0 20px 25px -5px rgba(0,0,0,0.02) !important;
    }

    /* Badge Onboarding */
    .onboarding-badge {
        display: inline-flex;
        align-items: center;
        background: var(--indigo-subtle);
        color: var(--indigo);
        padding: 6px 16px;
        border-radius: 99px;
        font-size: 0.8rem;
        font-weight: 800;
        text-transform: uppercase;
        border: 1px solid var(--indigo-light);
    }

    /* Bouton Primary UX */
    .btn-ux-primary {
        background: var(--indigo);
        color: white;
        border: none;
        box-shadow: 0 4px 14px 0 rgba(79, 70, 229, 0.3);
        transition: all 0.3s ease;
    }
    .btn-ux-primary:hover {
        background: #4338ca;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(79, 70, 229, 0.4);
        color: white;
    }

    /* Utilitaires */
    .hover-translate-x { transition: transform 0.3s ease; }
    .hover-translate-x:hover { transform: translateX(-5px); color: var(--indigo) !important; }
    
    .icon-circle-sm {
        width: 32px; height: 32px; border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        font-size: 0.8rem; flex-shrink: 0;
    }
    .bg-indigo { background-color: var(--indigo); }
    .text-indigo { color: var(--indigo); }
    .border-indigo-light { border-color: var(--indigo-light) !important; }
</style>
{% endblock %}