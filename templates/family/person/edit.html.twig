{% extends 'base.html.twig' %}

{% block title %}Modifier {{ person.firstname }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            
            {# Retour à la liste #}
            <nav aria-label="breadcrumb" class="mb-4">
                <a href="{{ path('app_person_index') }}" class="text-decoration-none text-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la famille
                </a>
            </nav>

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h2 class="h4 mb-0">
                        <i class="fas fa-user-edit me-2"></i>Modifier : {{ person.firstname }} {{ person.lastname|upper }}
                    </h2>
                </div>

                <div class="card-body p-4">
                    {# Inclusion du formulaire partagé #}
                    {{ include('family/person/_form.html.twig', {
                        'button_label': 'Mettre à jour la fiche',
                        'button_class': 'btn-primary'
                    }) }}
                </div>
            </div>

            {# Zone de Danger (Uniquement en mode édition) #}
            <div class="card border-danger bg-light mt-5">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-danger fw-bold mb-1">Zone de danger</h6>
                        <p class="small text-muted mb-0">La suppression est irréversible et rompra les liens de parenté.</p>
                    </div>
                    
                    {# Inclusion du formulaire de suppression #}
                    {{ include('family/person/_delete_form.html.twig') }}
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .card { border-radius: 12px; }
    .bg-primary { background-color: #2c3e50 !important; }
    .border-danger { border-style: dashed !important; border-width: 2px; }
</style>
{% endblock %}