{% extends 'base.html.twig' %}

{% block title %}Ma Famille{% endblock %}

{% block body %}
<div class="container py-5">
    {# Header #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1">üë®‚Äçüë©‚Äçüëß‚Äçüë¶ Ma Famille</h1>
            <p class="text-muted small mb-0">Gestion des membres pour les simulations de donations.</p>
        </div>
        <a href="{{ path('app_person_new') }}" class="btn btn-success px-4 shadow-sm">
            <i class="fas fa-plus-circle me-2"></i>Nouveau Membre
        </a>
    </div>

    {# Barre de recherche #}
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-2">
            <div class="input-group">
                <span class="input-group-text bg-transparent border-0"><i class="fas fa-search text-muted"></i></span>
                <input type="text" id="memberSearch" class="form-control border-0 shadow-none" placeholder="Rechercher par nom ou pr√©nom...">
            </div>
        </div>
    </div>

    {# Table des membres #}
    <div class="card border-0 shadow-sm overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="familyTable">
                <thead class="bg-light border-bottom">
                    <tr>
                        <th class="ps-4 py-3 text-muted fw-bold small text-uppercase">Membre</th>
                        <th class="py-3 text-muted fw-bold small text-uppercase">Genre</th>
                        <th class="py-3 text-muted fw-bold small text-uppercase">Date de Naissance</th>
                        <th class="py-3 text-muted fw-bold small text-uppercase text-center">√Çge</th>
                        <th class="py-3 text-muted fw-bold small text-uppercase text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for person in people %}
                        <tr class="member-row">
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    {# Avatar dynamique #}
                                    <div class="avatar-box me-3 {{ person.gender == 'M' ? 'male' : (person.gender == 'F' ? 'female' : 'other') }}">
                                        {{ person.firstname|first }}{{ person.lastname|first }}
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">{{ person.firstname }} {{ person.lastname|upper }}</div>
                                        <span class="text-muted x-small">Dossier #{{ person.id }}</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                {% if person.gender == 'M' %}
                                    <span class="badge-custom male">Masculin</span>
                                {% elseif person.gender == 'F' %}
                                    <span class="badge-custom female">F√©minin</span>
                                {% else %}
                                    <span class="badge-custom other">Autre</span>
                                {% endif %}
                            </td>
                            <td class="text-secondary">
                                <i class="far fa-calendar-alt me-1 opacity-50"></i> {{ person.birthdate|date('d/m/Y') }}
                            </td>
                            <td class="text-center">
                                <span class="fw-bold text-dark">{{ person|age }} ans</span>
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    {# ACTION MODIFIER #}
                                    <a href="{{ path('app_person_edit', {'id': person.id}) }}" 
                                       class="btn-action edit" 
                                       title="Modifier la fiche">
                                        <i class="fas fa-user-edit"></i>
                                    </a>
                                    
                                    {# ACTION SIMULATEUR #}
                                    <a href="#" 
                                       class="btn-action calc" 
                                       title="Simuler une donation">
                                        <i class="fas fa-calculator"></i>
                                    </a>

                                    {# ACTION ARBRE #}
                                    <a href="{{ path('app_person_tree', {'id': person.id}) }}" 
                                       class="btn-action tree" 
                                       title="Voir l'arbre">
                                        <i class="fas fa-sitemap"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <p class="text-muted mb-0">Aucun membre dans la famille.</p>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* Avatars */
    .avatar-box {
        width: 42px; height: 42px; border-radius: 10px;
        display: flex; align-items: center; justify-content: center;
        font-weight: bold; color: white;
    }
    .avatar-box.male { background: #3182ce; }
    .avatar-box.female { background: #d53f8c; }
    .avatar-box.other { background: #718096; }

    /* Badges Genre */
    .badge-custom {
        padding: 4px 10px; border-radius: 20px; font-size: 0.75rem; font-weight: 600;
    }
    .badge-custom.male { background: #ebf8ff; color: #2b6cb0; }
    .badge-custom.female { background: #fff5f7; color: #9b2c2c; }
    .badge-custom.other { background: #f7fafc; color: #4a5568; }

    /* Boutons d'Action avec FontAwesome */
    .btn-action {
        width: 35px; height: 35px; border-radius: 8px;
        display: inline-flex; align-items: center; justify-content: center;
        text-decoration: none; border: 1px solid #e2e8f0;
        transition: all 0.2s; background: white;
    }
    .btn-action:hover { transform: translateY(-2px); box-shadow: 0 4px 6px rgba(0,0,0,0.05); }
    
    .btn-action.edit { color: #d69e2e; }
    .btn-action.edit:hover { background: #fffaf0; border-color: #faf089; }
    
    .btn-action.calc { color: #3182ce; }
    .btn-action.calc:hover { background: #ebf8ff; border-color: #bee3f8; }

    .btn-action.tree { color: #38a169; }
    .btn-action.tree:hover { background: #f0fff4; border-color: #c6f6d5; }

    .x-small { font-size: 0.7rem; }
    .member-row:hover { background-color: #f8fafc !important; }
</style>

<script>
    // Filtre de recherche
    document.getElementById('memberSearch').addEventListener('keyup', function() {
        let value = this.value.toLowerCase();
        let rows = document.querySelectorAll('.member-row');
        rows.forEach(row => {
            row.style.display = row.innerText.toLowerCase().includes(value) ? '' : 'none';
        });
    });
</script>
{% endblock %}