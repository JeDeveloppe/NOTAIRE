{# templates/family/dashboard.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Tableau de bord de la famille{% endblock %}

{% block body %}
<div class="container-fluid py-4 bg-light min-vh-100">
    <div class="container">

        {# --- ONBOARDING WIZARD --- #}
        {{ include('family/_onboarding_wizard.html.twig', { 
            'items': people, 
            'donations': activeDonations|merge(expiredDonations|default([])) 
        }) }}

        {# --- HEADER --- #}
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5 gap-3">
            <div>
                <h1 class="h3 mb-1 fw-black text-dark">
                    <span class="text-primary"><i class="fa-solid fa-people-roof"></i></span> Ma Famille
                </h1>
                <p class="text-muted small mb-0">Pilotez votre stratégie de transmission et vos abattements fiscaux.</p>
            </div>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-white border shadow-sm rounded-pill fw-bold px-4 transition-all" data-bs-toggle="modal" data-bs-target="#addDonationModal">
                    <i class="fas fa-hand-holding-usd me-2 text-primary"></i>Saisir un don
                </button>
                
                <a href="{{ path('app_person_new') }}" class="btn btn-primary px-4 shadow-sm rounded-pill fw-bold transition-all">
                    <i class="fas fa-plus-circle me-2"></i>Nouveau Membre
                </a>
            </div>
        </div>

        {# --- STATS RAPIDES & CAPACITÉ --- #}
        <div class="row g-4 mb-5">
            {# Membres #}
            <div class="col-md-4">
                <div class="card border-0 shadow-sm rounded-4 p-4 h-100 bg-white">
                    <div class="d-flex align-items-center">
                        <div class="icon-circle bg-primary-subtle text-primary rounded-4 p-3 me-3">
                            <i class="fas fa-users fa-lg"></i>
                        </div>
                        <div>
                            <div class="text-muted small fw-bold text-uppercase ls-1">Membres rattachés</div>
                            <div class="h3 mb-0 fw-black text-dark">{{ people|length }}</div>
                        </div>
                    </div>
                    <div class="mt-3 pt-3 border-top">
                        <span class="text-muted small"><i class="fa-solid fa-circle-info me-1 text-primary"></i> {{ people|length }} profils actifs</span>
                    </div>
                </div>
            </div>

            {# Dons Actifs #}
            <div class="col-md-4">
                <div class="card border-0 shadow-sm rounded-4 p-4 h-100 bg-white border-start border-warning border-4">
                    <div class="d-flex align-items-center">
                        <div class="icon-circle bg-warning-subtle text-warning rounded-4 p-3 me-3">
                            <i class="fas fa-clock fa-lg"></i>
                        </div>
                        <div>
                            <div class="text-muted small fw-bold text-uppercase ls-1">Donations < 15 ans</div>
                            <div class="h3 mb-0 fw-black text-dark">{{ activeDonations|length }}</div>
                        </div>
                    </div>
                    <div class="mt-3 pt-3 border-top">
                        <span class="text-muted small">Impacte la capacité actuelle</span>
                    </div>
                </div>
            </div>

            {# CAPACITÉ DE TRANSMISSION (UX NOIRE / DARK MODE) #}
            <div class="col-md-4">
                <div class="card border-0 shadow-lg rounded-4 p-4 h-100 bg-dark text-white overflow-hidden position-relative">
                    {# Décoration de fond #}
                    <div class="position-absolute top-0 end-0 translate-middle-y opacity-10" style="margin-right: -20px; margin-top: 10px;">
                        <i class="fa-solid fa-shield-heart fa-6x text-white"></i>
                    </div>

                    <div class="position-relative z-index-1">
                        <div class="text-white-50 small fw-bold text-uppercase ls-1 mb-1">Potentiel d'exonération</div>
                        <div class="h2 mb-3 fw-black text-info">{{ totalAvailableAllowance|number_format(0, ',', ' ') }} €</div>
                        
                        <div class="progress rounded-pill bg-secondary mb-3" style="height: 6px; background-color: rgba(255,255,255,0.1) !important;">
                            <div class="progress-bar bg-info shadow-glow" role="progressbar" style="width: 65%"></div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <span class="x-small opacity-75 fw-bold"><i class="fa-solid fa-bolt text-info me-1"></i> Optimisation possible</span>
                            <a href="{{ path('app_optimization_dashboard') }}" class="btn btn-sm btn-outline-light rounded-pill px-3 py-1 fw-bold x-small">
                                Analyser <i class="fas fa-chevron-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            {# --- COLONNE GAUCHE --- #}
            <div class="col-lg-8">
                {# RÉPERTOIRE FAMILIAL #}
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white mb-4">
                    <div class="card-header bg-white border-0 pt-4 px-4">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h5 class="fw-bold mb-0">Répertoire des membres</h5>
                        </div>
                        <div class="input-group mb-2 mt-3">
                            <span class="input-group-text bg-light border-0"><i class="fas fa-search text-muted"></i></span>
                            <input type="text" id="memberSearch" class="form-control bg-light border-0 py-2" placeholder="Rechercher par nom ou rôle...">
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="bg-light text-muted small">
                                <tr>
                                    <th class="ps-4 border-0 py-3 text-uppercase ls-1">Membre</th>
                                    <th class="border-0 text-uppercase ls-1">Statut Fiscal</th>
                                    <th class="text-end pe-4 border-0 text-uppercase ls-1">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="familyTable">
                                {% for person in people %}
                                    <tr class="member-row transition-all border-bottom-0">
                                        <td class="ps-4 py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3 position-relative">
                                                    {% include "components/person/_avatar_with_initial.html.twig" with { 'person': person } %}
                                                    {# Indicateur visuel de capacité #}
                                                    <span class="position-absolute bottom-0 end-0 p-1 bg-success border border-white rounded-circle shadow-sm" title="Abattements disponibles"></span>
                                                </div>
                                                <div>
                                                    <div class="fw-bold mb-0 text-dark">{{ person.firstname }} <span class="text-uppercase">{{ person.lastname }}</span></div>
                                                    <div class="d-flex gap-2 mt-1">
                                                        <span class="badge bg-light text-muted border rounded-pill x-small fw-normal">
                                                            {% include "components/person/_genderIcon.html.twig" %} Enfant
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                {% include "components/person/_age_status_live.html.twig" %}
                                                <span class="ms-2 badge bg-primary-subtle text-primary rounded-pill x-small px-2">
                                                    Donateur éligible
                                                </span>
                                            </div>
                                        </td>
                                        <td class="text-end pe-4">
                                            <div class="btn-group shadow-xs rounded-pill bg-white border p-1">
                                                <a href="{{ path('app_person_edit', {id: person.id}) }}" class="btn btn-sm btn-link text-muted px-3 border-end transition-all" title="Modifier"><i class="fas fa-pen"></i></a>
                                                <a href="{{ path('app_person_tree', {id: person.id}) }}" class="btn btn-sm btn-link text-primary px-3 transition-all" title="Voir l'arbre"><i class="fas fa-sitemap"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                {# --- HISTORIQUE ACCORDION --- #}
                <div class="accordion border-0 shadow-sm rounded-4 overflow-hidden mb-4" id="donationLogs">
                    <div class="accordion-item border-0">
                        <div class="accordion-header bg-white d-flex justify-content-between align-items-center pe-3">
                            <button class="accordion-button bg-white fw-bold text-dark shadow-none w-auto" type="button" data-bs-toggle="collapse" data-bs-target="#collapseLogs">
                                <i class="fas fa-history me-2 text-primary"></i> Historique des actes
                            </button>
                            <a href="{{ path('app_donation_index') }}" class="btn btn-sm btn-light text-muted rounded-pill px-3 fw-bold x-small border">
                                Gérer tout
                            </a>
                        </div>
                        <div id="collapseLogs" class="accordion-collapse collapse show">
                            <div class="accordion-body p-0 bg-white">
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle mb-0 x-small">
                                        <thead class="table-light text-muted">
                                            <tr>
                                                <th class="ps-4">Date</th>
                                                <th>Flux de transmission</th>
                                                <th class="text-end pe-4">Montant</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% set allDonations = activeDonations|merge(expiredDonations|default([])) %}
                                            {% for donation in allDonations|sort((a, b) => b.createdAt <=> a.createdAt) %}
                                                <tr>
                                                    <td class="ps-4 text-muted">{{ donation.createdAt|date('d/m/Y') }}</td>
                                                    <td>
                                                        <span class="fw-bold text-dark">{{ donation.donor.firstname }}</span> 
                                                        <i class="fas fa-arrow-right mx-2 text-primary opacity-50"></i> 
                                                        <span class="text-dark">{{ donation.beneficiary.firstname }}</span>
                                                    </td>
                                                    <td class="text-end pe-4 fw-black text-primary">{{ donation.amount|number_format(0, ',', ' ') }} €</td>
                                                </tr>
                                            {% else %}
                                                <tr><td colspan="3" class="text-center py-5 text-muted italic">Aucun acte enregistré à ce jour.</td></tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# --- COLONNE DROITE --- #}
            <div class="col-lg-4">
                {# STRATÉGIE / UPSELL FISCAL #}
                <div class="card border-0 shadow-sm rounded-4 bg-primary text-white mb-4 overflow-hidden">
                    <div class="card-body p-4 position-relative">
                        <div class="z-index-1 position-relative">
                            <h6 class="fw-bold mb-3 d-flex align-items-center">
                                <i class="fas fa-wand-magic-sparkles me-2 text-warning"></i> Analyse Stratégique
                            </h6>
                            <p class="small mb-4 opacity-75">
                                Vos abattements "Parents-Enfants" sont disponibles à 85%. Une donation anticipée pourrait économiser jusqu'à <strong>12 400 €</strong> de droits.
                            </p>
                            <a href="{{ path('app_optimization_dashboard') }}" class="btn btn-white btn-sm w-100 rounded-pill fw-bold py-2 shadow-sm text-primary">
                                Voir le plan d'action
                            </a>
                        </div>
                    </div>
                </div>

                {# TIMELINE DES DERNIERS MOUVEMENTS #}
                <div class="card border-0 shadow-sm rounded-4 bg-white sticky-top" style="top: 20px;">
                    <div class="card-body">
                        <h6 class="fw-bold mb-4 text-dark border-bottom pb-2">Dernières saisies</h6>
                        <div class="timeline">
                            {% for donation in activeDonations|slice(0, 4) %}
                                <div class="p-3 mb-3 bg-light rounded-4 border-start border-primary border-4 transition-all">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span class="fw-bold text-dark x-small">{{ donation.beneficiary.firstname }}</span>
                                        <span class="text-primary fw-black small">{{ donation.amount|number_format(0, ',', ' ') }}€</span>
                                    </div>
                                    <div class="text-muted opacity-75" style="font-size: 0.6rem;">
                                        <i class="fa-regular fa-calendar-check me-1"></i> {{ donation.createdAt|date('d M Y') }}
                                    </div>
                                </div>
                            {% else %}
                                <div class="text-center py-5">
                                    <div class="mb-2 opacity-25"><i class="fas fa-stream fa-2x"></i></div>
                                    <p class="text-muted small mb-0">Aucun mouvement récent</p>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{# --- MODALE DONATION --- #}
<div class="modal fade" id="addDonationModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow-lg rounded-5">
            <div class="modal-header border-0 pt-4 px-4">
                <h5 class="fw-black mb-0">Enregistrer un nouvel acte</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                {{ render(path('app_donation_new')) }}
            </div>
        </div>
    </div>
</div>

{# --- STYLES PERSONNALISÉS --- #}
<style>
    .fw-black { font-weight: 900; }
    .ls-1 { letter-spacing: 0.05em; }
    .x-small { font-size: 0.7rem; }
    .z-index-1 { z-index: 1; }
    
    .icon-circle { width: 48px; height: 48px; display: flex; align-items: center; justify-content: center; }
    .bg-primary-subtle { background-color: #eef2ff !important; }
    .bg-warning-subtle { background-color: #fffbeb !important; }
    .text-primary { color: #4f46e5 !important; }
    .bg-primary { background-color: #4f46e5 !important; }
    
    .btn-white { background: white; color: #4f46e5; border: none; }
    .btn-white:hover { background: #f8fafc; color: #4338ca; transform: translateY(-2px); }
    
    .shadow-glow { box-shadow: 0 0 10px rgba(13, 202, 240, 0.4); }
    .transition-all { transition: all 0.2s ease-in-out; }
    
    .member-row:hover { background-color: #fcfdfe; transform: scale(1.002); }
    .shadow-xs { box-shadow: 0 1px 2px rgba(0,0,0,0.05); }
    
    .accordion-button:not(.collapsed) { background-color: transparent; color: inherit; box-shadow: none; }
    .accordion-button::after { background-size: 1rem; }

    @media (min-width: 768px) {
        .border-start-md { border-left: 1px solid #dee2e6 !important; padding-left: 1.5rem; }
    }
</style>

{# --- SCRIPT RECHERCHE --- #}
<script>
    document.addEventListener('turbo:load', function() {
        const searchInput = document.getElementById('memberSearch');
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                let filter = this.value.toLowerCase();
                document.querySelectorAll('.member-row').forEach(row => {
                    const text = row.innerText.toLowerCase();
                    row.style.display = text.includes(filter) ? '' : 'none';
                });
            });
        }
    });
</script>
{% endblock %}