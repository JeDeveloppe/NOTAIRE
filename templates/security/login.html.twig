{% extends 'base.html.twig' %}

{% block title %}Connexion - Étude Notariale{% endblock %}

{% block body %}
<div class="container d-flex align-items-center justify-content-center min-vh-100 py-5">
    <div class="login-card p-4 p-md-5 rounded-5 shadow-lg border-0 bg-white position-relative overflow-hidden">
        
        {# Décoration de fond subtile #}
        <div class="position-absolute top-0 start-0 w-100 h-1" style="background: linear-gradient(90deg, #4338ca, #6366f1); height: 6px;"></div>

        <div class="text-center mb-5">
            <div class="icon-circle bg-primary-subtle text-primary mx-auto mb-4">
                <i class="fas fa-user-shield fa-2x"></i>
            </div>
            <h1 class="h3 fw-bolder text-dark">Espace Client</h1>
            <p class="text-muted">Accédez à votre stratégie patrimoniale</p>
        </div>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger border-0 rounded-4 mb-4 shadow-sm d-flex align-items-center">
                    <i class="fas fa-exclamation-circle me-3"></i>
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                </div>
            {% endif %}

            {% if app.user %}
                <div class="alert alert-info border-0 rounded-4 mb-4 d-flex justify-content-between align-items-center">
                    <span>Connecté : <strong>{{ app.user.userIdentifier }}</strong></span>
                    <a href="{{ logout_path() }}" class="btn btn-sm btn-outline-info rounded-pill">Déconnexion</a>
                </div>
            {% endif %}

            <div class="form-floating mb-3">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" 
                       class="form-control border-0 bg-light rounded-4 px-4" 
                       placeholder="nom@exemple.com" autocomplete="email" required autofocus>
                <label for="inputEmail" class="ms-2 text-muted">Adresse Email</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" name="password" id="inputPassword" 
                       class="form-control border-0 bg-light rounded-4 px-4" 
                       placeholder="Mot de passe" autocomplete="current-password" required>
                <label for="inputPassword" class="ms-2 text-muted">Mot de passe</label>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="d-flex justify-content-between align-items-center mb-4 px-2">
                <div class="form-check custom-checkbox">
                    <input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
                    <label class="form-check-label small text-muted" for="_remember_me">Se souvenir de moi</label>
                </div>
                <a href="#" class="small text-primary text-decoration-none fw-bold">Oublié ?</a>
            </div>

            <button class="btn btn-primary btn-lg w-100 py-3 rounded-4 shadow-sm fw-bold hover-lift mb-4" type="submit">
                Se connecter <i class="fas fa-arrow-right ms-2"></i>
            </button>

            <div class="text-center">
                <p class="small text-muted mb-0">Pas encore de compte ? 
                    <a href="{{ path('app_register') }}" class="text-primary fw-bold text-decoration-none">Créer un profil</a>
                </p>
            </div>
        </form>
    </div>
</div>

<style>
    body { background-color: #f8fafc; }

    .login-card {
        width: 100%;
        max-width: 450px;
        transition: transform 0.3s ease;
    }

    .icon-circle {
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }

    /* Effet sur les champs de saisie */
    .form-control:focus {
        background-color: #fff !important;
        box-shadow: 0 0 0 4px rgba(67, 56, 202, 0.1);
        border: 1px solid #4338ca !important;
    }

    .form-floating > label {
        transition: all 0.2s ease;
    }

    /* Animation du bouton */
    .hover-lift {
        transition: all 0.2s ease;
    }
    .hover-lift:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 15px rgba(67, 56, 202, 0.2) !important;
    }

    .bg-primary-subtle { background-color: #eef2ff !important; }
    .text-primary { color: #4338ca !important; }
    .btn-primary { background-color: #4338ca; border: none; }
    .btn-primary:hover { background-color: #3730a3; }
</style>
{% endblock %}