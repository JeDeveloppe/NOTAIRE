{# templates/notary/dashboard.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - {{ notary.name }}{% endblock %}

{% block body %}
{# On place le style ici avec des sélecteurs très spécifiques pour forcer l'affichage #}
<style>
    /* 1. KPI SCORE - On force les couleurs et la forme */
    .kpi-score-card {
        background: linear-gradient(135deg, #ffffff 0%, #f8faff 100%) !important;
        border: 1px solid #e2e8f0 !important;
        border-radius: 1rem !important;
    }
    .score-circle {
        width: 54px !important; 
        height: 54px !important;
        display: flex !important; 
        align-items: center !important; 
        justify-content: center !important;
        background-color: #6366f1 !important; 
        color: white !important;
        border-radius: 50% !important; 
        font-weight: 800 !important;
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.2) !important;
    }

    /* 2. BLUR & TEASER - Pour le mode sans forfait */
    .blur-container { position: relative; min-height: 250px; overflow: hidden; border-radius: 0 0 1rem 1rem; }
    .blur-content { 
        filter: blur(8px) !important; 
        -webkit-filter: blur(8px) !important; 
        opacity: 0.5 !important; 
        pointer-events: none !important; 
        user-select: none !important;
    }
    .teaser-overlay {
        position: absolute; top: 0; left: 0; right: 0; bottom: 0; z-index: 100;
        display: flex; align-items: center; justify-content: center; 
        background: rgba(255, 255, 255, 0.2);
    }
    .teaser-card {
        background: white !important; padding: 2rem; border-radius: 1.2rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important; 
        text-align: center; max-width: 420px; border: 1px solid #f1f5f9;
    }

    /* 3. ANIMATIONS LIVE */
    .dot-live {
        height: 10px; width: 10px; background-color: #22c55e; border-radius: 50%;
        display: inline-block; animation: pulse-green 2s infinite;
    }
    @keyframes pulse-green {
        0% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7); }
        70% { box-shadow: 0 0 0 10px rgba(34, 197, 94, 0); }
        100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0); }
    }

    /* 4. LIENS D'AIDE */
    .help-link { color: #94a3b8; cursor: pointer; text-decoration: none; }
    .help-link:hover { color: #6366f1 !important; }
    .text-indigo { color: #6366f1 !important; }
    .smaller { font-size: 0.75rem !important; }
</style>

<div class="container py-5">
    {# Vérifie que ce fichier existe bien #}
    {{ include('notary/_onboarding_notary.html.twig', ignore_missing = true) }}

    {# EN-TÊTE ÉPURÉ #}
    <div class="card kpi-score-card shadow-sm border-0 mb-5 p-4">
        <div class="row align-items-center">
            <div class="col-md-7">
                <h4 class="fw-bold mb-1">Maître {{ notary.name }}</h4>
                <div class="d-flex align-items-center gap-3">
                    <span class="text-muted small">
                        <i class="bi bi-building text-primary me-1"></i> Étude notariale certifiée
                    </span>
                    <div class="vr opacity-25" style="height: 15px;"></div>
                    <a href="#faq-general" data-bs-toggle="modal" data-bs-target="#faqModal" class="text-decoration-none smaller text-indigo fw-medium">
                        <i class="bi bi-question-circle me-1"></i> Aide & Fonctionnement
                    </a>
                </div>
            </div>
            <div class="col-md-5 text-md-end mt-3 mt-md-0">
                <div class="d-inline-flex align-items-center bg-white p-2 pe-4 rounded-pill shadow-sm border">
                    <div class="score-circle me-3">
                        {{ notary.score|default('100') }}
                    </div>
                    <div class="text-start">
                        <div class="fw-bold text-dark mb-0" style="font-size: 0.85rem;">Indice étude</div>
                        <div class="text-muted smaller">Réactivité & Qualité</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        {# COLONNE GAUCHE #}
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100 rounded-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title fw-bold mb-0">
                            Mes codes postaux 
                            <span class="help-link ms-1" data-bs-toggle="modal" data-bs-target="#faqModal" data-faq-anchor="#faq-territoire">
                                <i class="bi bi-question-circle"></i>
                            </span>
                        </h5>
                    </div>

                    {% if hasActiveOffer %}
                        <div class="list-group list-group-flush mb-4">
                            {% for zip in notary.selectedZipCodes|slice(0, 8) %}
                                <div class="list-group-item px-0 d-flex justify-content-between align-items-center border-0 border-bottom">
                                    <span class="smaller fw-medium"><i class="bi bi-pin-map text-primary me-2"></i>{{ zip.city.name }}</span>
                                    <span class="badge bg-light text-dark fw-normal">{{ zip.city.postalCode }}</span>
                                </div>
                            {% endfor %}
                        </div>
                        <a href="#" class="btn btn-outline-primary btn-sm w-100 rounded-pill">Modifier mon territoire</a>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="bi bi-geo-alt text-muted fs-1 opacity-25"></i>
                            <p class="smaller text-muted mt-3 mb-4">Activez vos codes postaux pour voir les dossiers.</p>
                            {% include "components/buttons/_notary_choice_price.html.twig" %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# COLONNE DROITE #}
        <div class="col-lg-8">
            {# FLUX #}
            <div class="card shadow-sm border-0 mb-4 border-start border-primary border-4 rounded-4">
                <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <h5 class="card-title fw-bold mb-0 text-primary">Flux des opportunités</h5>
                        <span class="ms-3 d-flex align-items-center">
                            <span class="dot-live me-2"></span>
                            <span class="text-uppercase fw-bold text-muted smaller">En direct</span>
                        </span>
                    </div>
                </div>
                
                <div class="blur-container">
                    {% if not hasActiveOffer %}
                        <div class="teaser-overlay">
                            <div class="teaser-card shadow-lg">
                                <h6 class="fw-bold">Accès au flux restreint</h6>
                                <p class="smaller text-muted mb-4">Choisissez un forfait pour activer la réception de dossiers.</p>
                                {% include "components/buttons/_notary_choice_price.html.twig" %}
                            </div>
                        </div>
                    {% endif %}

                    <div class="table-responsive {{ not hasActiveOffer ? 'blur-content' : '' }}">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light smaller text-muted">
                                <tr>
                                    <th class="ps-4 border-0">Dpt</th>
                                    <th class="border-0">Référence</th>
                                    <th class="text-end pe-4 border-0">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for sim in availableSimulations %}
                                    <tr>
                                        <td class="ps-4 fw-bold text-primary">{{ sim.user.zipCode|slice(0,2) }}</td>
                                        <td class="smaller fw-medium">{{ hasActiveOffer ? sim.reference : 'SIM-PRO-XXXX' }}</td>
                                        <td class="text-end pe-4">
                                            <button class="btn btn-sm btn-primary rounded-pill px-3 fw-bold">Sélectionner</button>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            {# MÉMOIRE #}
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title fw-bold mb-0 text-dark">
                        Mes sélections 
                        <span class="help-link ms-1" data-bs-toggle="modal" data-bs-target="#faqModal" data-faq-anchor="#faq-selection">
                            <i class="bi bi-question-circle"></i>
                        </span>
                    </h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <tbody class="border-top-0">
                            {% for lead in notary.simulations|slice(0, 10) %}
                                <tr>
                                    <td class="ps-4 smaller fw-bold">{{ lead.reference }}</td>
                                    <td class="smaller fw-medium">{{ lead.user.fullName }}</td>
                                    <td class="text-end pe-4">
                                        <a href="#" class="btn btn-sm btn-light border rounded-circle"><i class="bi bi-eye"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr><td colspan="3" class="text-center py-5 text-muted smaller">Aucun dossier sélectionné.</td></tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{{ include('notary/_faq.html.twig', ignore_missing = true) }}

{% endblock %}