{% extends 'base.html.twig' %}

{% block title %}Registre des simulations de votre zone - {{ notary.name }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-black mb-0">Registre des simulations de votre zone</h2>
            <p class="text-muted">Archives et dossiers disponibles dans votre zone ({{ pagination.getTotalItemCount }} résultats)</p>
        </div>
        <a href="{{ path('app_notary_dashboard') }}" class="btn btn-outline-secondary rounded-pill smaller">
            <i class="bi bi-arrow-left me-2"></i>Retour Dashboard
        </a>
    </div>

    <div class="row g-4">
        {% for sim in pagination %}
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm rounded-4 p-4 hover-shadow transition">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <span class="badge bg-indigo-light text-indigo rounded-pill mb-2">#{{ sim.reference }}</span>
                            <h5 class="fw-bold mb-0">{{ sim.user.city.postalCode }} - {{ sim.user.city.name|upper }}</h5>
                        </div>
                        <div class="text-end">
                            <div class="smaller text-muted">{{ sim.createdAt|date('d/m/Y') }}</div>
                            <div class="smaller fw-bold text-primary">{{ sim.createdAt|date('H:i') }}</div>
                        </div>
                    </div>

                    <div class="bg-light rounded-3 p-3 mb-3">
                        <div class="row align-items-center">
                            <div class="col-7 border-end">
                                <div class="smaller text-muted text-uppercase fw-bold" style="font-size: 0.6rem;">Économie potentielle</div>
                                <div class="fs-5 fw-black text-success">{{ sim.totalSaving|number_format(0, ',', ' ') }} €</div>
                            </div>
                            <div class="col-5 ps-3">
                                <div class="smaller text-muted text-uppercase fw-bold" style="font-size: 0.6rem;">Abattements</div>
                                <div class="fw-bold text-dark">{{ sim.totalAvailable|number_format(0, ',', ' ') }} €</div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        {% set type = sim.reference|split('-')|last %}
                        <span class="smaller fw-bold text-muted">
                            <i class="bi bi-journal-text me-1"></i> {{ type == 'DON' ? 'DONATION' : 'SUCCESSION' }}
                        </span>
                        <a href="{{ path('app_notary_simulation_view', {reference: sim.reference}) }}" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">
                            Voir le dossier
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center py-5">
                <i class="bi bi-book text-muted opacity-25" style="font-size: 4rem;"></i>
                <p class="mt-3 text-muted">Le registre est vide pour le moment.</p>
            </div>
        {% endfor %}
    </div>

    {# --- PAGINATION --- #}
    <div class="navigation d-flex justify-content-center mt-5">
        {{ knp_pagination_render(pagination) }}
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,0.1) !important;
    }
    .transition { transition: all 0.3s ease; }
</style>
{% endblock %}