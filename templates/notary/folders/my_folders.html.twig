{% extends 'base.html.twig' %}

{% block title %}Mes Dossiers - Étude {{ app.user.notary.name }}{% endblock %}

{% block body %}
<div class="container-fluid py-4 max-nav-width">
    <div class="row g-4 justify-content-center">
        {# --- COLONNE LISTE DES DOSSIERS --- #}
        <div class="col-12 col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-black m-0 h4">Mes dossiers</h2>
                <div class="dropdown">
                    <button class="btn btn-white border bg-white dropdown-toggle rounded-pill btn-sm fw-bold px-3" type="button" data-bs-toggle="dropdown">
                        Trier par date
                    </button>
                    <ul class="dropdown-menu shadow-sm border-0">
                        <li><a class="dropdown-item" href="#">Plus récents</a></li>
                        <li><a class="dropdown-item" href="#">Urgence</a></li>
                    </ul>
                </div>
            </div>

            {% if folders is empty %}
                <div class="card border-0 shadow-sm rounded-4 p-5 text-center bg-white">
                    <div class="mb-3 opacity-25">
                        <i class="fas fa-folder-open fa-4x text-indigo"></i>
                    </div>
                    <h5 class="fw-bold">Aucun dossier pour le moment</h5>
                    <p class="text-muted">Augmentez votre zone d'influence pour visualiser plus de dossiers.</p>
                </div>
            {% else %}
                <div class="row g-3">
                    {% for folder in folders %}
                        <div class="col-12">
                            <div class="card folder-card border-0 shadow-sm rounded-4 transition-all">
                                <div class="card-body p-4">
                                    <div class="row align-items-center">
                                        {# Icône & Statut #}
                                        <div class="col-auto">
                                            <div class="icon-circle bg-indigo-soft text-indigo rounded-3 p-3">
                                                <i class="fas fa-file-signature fs-4"></i>
                                            </div>
                                        </div>
                                        
                                        {# Infos Dossier #}
                                        <div class="col">
                                            <div class="d-flex align-items-center gap-2 mb-1">
                                                <h6 class="fw-bold mb-0">Réf: #SIM-{{ folder.id }}</h6>
                                                <span class="badge bg-success bg-opacity-10 text-success smaller px-2">Nouveau</span>
                                            </div>
                                            <p class="text-muted small mb-0">
                                                <i class="fas fa-calendar-alt me-1"></i> Reçu le {{ folder.createdAt|date('d/m/Y H:i') }}
                                                <span class="mx-2">•</span>
                                                <i class="fas fa-map-pin me-1"></i> {{ folder.city.name|default('Inconnue') }}
                                            </p>
                                        </div>

                                        {# Bouton "Sélectionner" (Mémorisation + Déblocage) #}
                                        <div class="col-auto text-end">
                                            <div class="d-flex flex-column gap-2">
                                                <a href="#" class="btn btn-primary rounded-pill fw-bold px-4">
                                                    <i class="fas fa-check-circle me-2"></i>Sélectionner
                                                </a>
                                                <span class="smaller text-muted">Débloque les détails</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {# Footer de la carte avec infos rapides #}
                                <div class="card-footer bg-light bg-opacity-50 border-0 px-4 py-2 d-flex gap-3">
                                    <small class="text-muted"><i class="fas fa-user-lock me-1"></i> Données sécurisées</small>
                                    <small class="text-muted"><i class="fas fa-bolt me-1"></i> Réponse attendue sous 48h</small>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
    .folder-card {
        border-left: 5px solid transparent !important;
    }
    .folder-card:hover {
        transform: translateX(5px);
        border-left-color: var(--indigo-brand) !important;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08) !important;
    }
    .bg-indigo-soft {
        background-color: #f4f7ff;
    }
    .text-indigo {
        color: #6366f1;
    }
    .fw-black { font-weight: 900; }
    .smaller { font-size: 0.75rem; }
</style>
{% endblock %}