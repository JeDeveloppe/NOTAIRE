{# templates/notary/_modal_subscription_detail.html.twig #}
<div class="modal fade" id="modalSubscriptionDetail" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            
            <div class="modal-header border-0 pb-0 justify-content-end">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body px-4 pb-4 pt-0">
                
                {% if activeSubscription %}
                    {# --- CAS 1 : ABONNEMENT ACTIF --- #}
                    <div class="text-center mb-4">
                        <div class="bg-indigo-light d-inline-block p-3 rounded-circle mb-3">
                            <i class="bi bi-briefcase text-indigo fs-2"></i>
                        </div>
                        <h4 class="fw-black mb-1">{{ activeSubscription.offer.name|default('Contrat Actif') }}</h4>
                        <span class="badge bg-success-subtle text-success rounded-pill px-3">
                            <i class="bi bi-check-circle-fill me-1"></i> Abonnement actif
                        </span>
                    </div>

                    <div class="card bg-light border-0 rounded-4 mb-4">
                        <div class="card-body p-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted smaller">Début du contrat</span>
                                <span class="fw-bold smaller text-dark">{{ activeSubscription.startedAt|date('d/m/Y') }}</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted smaller">Prochaine facture</span>
                                <span class="fw-bold smaller text-dark">{{ activeSubscription.nextBillingAt|date('d/m/Y') }}</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted smaller">Mode de paiement</span>
                                <span class="fw-bold smaller text-dark"><i class="bi bi-credit-card me-1"></i> Carte bancaire</span>
                            </div>
                        </div>
                    </div>

                    <h6 class="fw-bold mb-3 small text-uppercase text-muted">Détails des droits</h6>
                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0 bg-transparent">
                            <div class="smaller">
                                <i class="bi bi-check2-circle text-success me-2"></i>
                                Forfait {{ activeSubscription.offer.name }}
                            </div>
                            <span class="fw-bold smaller">{{ activeSubscription.offer.baseNotariesCount }} codes postaux</span>
                        </li>
                        
                        {% if activeSubscription.addon %}
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0 bg-transparent">
                            <div class="smaller">
                                <i class="bi bi-plus-circle-fill text-primary me-2"></i> Extension (Addon)
                            </div>
                            <span class="fw-bold smaller">+{{ activeSubscription.addon.baseNotariesCount }} codes postaux</span>
                        </li>
                        {% endif %}

                        <li class="list-group-item d-flex justify-content-between align-items-center px-0 bg-transparent border-top">
                            <div class="fw-bold smaller text-dark">Capacité totale</div>
                            <div class="badge bg-indigo text-white rounded-pill px-3">{{ stats.totalSlots|default(0) }} codes postaux</div>
                        </li>
                    </ul>

                    <h6 class="fw-bold mb-2 small text-uppercase text-muted">Votre zone</h6>
                    <div class="d-flex flex-wrap gap-2 mb-4">
                        {% for zip in notary.selectedZipCodes %}
                            <span class="badge bg-white text-dark border fw-normal py-2 px-3 shadow-sm rounded-3">
                                {{ zip.city.postalCode }} <small class="opacity-50 ms-1">{{ zip.city.name|upper }}</small>
                            </span>
                        {% else %}
                            <p class="smaller text-muted py-2"><i class="bi bi-exclamation-triangle text-warning me-1"></i> Aucune zone configurée</p>
                        {% endfor %}
                    </div>

                    <div class="pt-2">
                        <a href="{{ path('app_notary_setup_zipcodes') }}" class="btn btn-outline-primary w-100 rounded-pill py-2 smaller fw-bold">
                            <i class="bi bi-geo-alt me-1"></i> Modifier mes zones
                        </a>
                    </div>

                    <div class="text-center mt-4 pt-3 border-top">
                        <a href="#" class="text-muted smaller text-decoration-none hover-indigo">
                            <i class="bi bi-file-earmark-pdf me-1"></i> Télécharger ma dernière facture
                        </a>
                    </div>

                {% else %}
                    {# --- CAS 2 : AUCUNE OFFRE --- #}
                    <div class="text-center py-4">
                        <div class="bg-light d-inline-block p-4 rounded-circle mb-4">
                            <i class="bi bi-shield-lock text-muted fs-1"></i>
                        </div>
                        <h4 class="fw-black mb-2">Aucune offre active</h4>
                        <p class="text-muted small mb-4 px-3">
                            Vous n'avez pas encore activé de forfait. Choisissez une offre pour commencer à recevoir des dossiers dans votre zone.
                        </p>
                        
                        <div class="d-grid gap-2">
                            {% include 'components/buttons/_notary_choice_price.html.twig' %}
                            <button type="button" class="btn btn-link btn-sm text-muted text-decoration-none mt-2" data-bs-toggle="modal" data-bs-target="#faqModal" data-bs-dismiss="modal">
                                <i class="bi bi-info-circle me-1"></i> Comment ça marche ?
                            </a>
                        </div>
                    </div>
                {% endif %}

            </div>
        </div>
    </div>
</div>