{% extends 'base.html.twig' %}

{% block title %}Mon Compte - {{ user.email }}{% endblock %}

{% block body %}
<style>
    :root {
        --indigo-brand: #6366f1;
        --indigo-soft: #f4f7ff;
        --indigo-light: rgba(99, 102, 241, 0.1);
        --slate-800: #1e293b;
    }

    /* Header UX */
    .profile-hero {
        background: white;
        border-bottom: 1px solid #eef2f6;
        padding: 3rem 0;
        margin-bottom: 2rem;
    }

    .avatar-circle {
        width: 72px; height: 72px;
        background: linear-gradient(135deg, var(--indigo-brand) 0%, #4338ca 100%);
        color: white; display: flex; align-items: center; justify-content: center;
        border-radius: 22px; font-size: 1.8rem; font-weight: 800;
        box-shadow: 0 10px 20px rgba(99, 102, 241, 0.15);
    }

    .info-label {
        font-size: 0.75rem; font-weight: 700; text-transform: uppercase;
        letter-spacing: 0.03em; color: #94a3b8; margin-bottom: 0.35rem;
    }

    /* Cartes */
    .account-card {
        border: 1px solid #f1f5f9 !important;
        border-radius: 1.25rem !important;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        background: white;
    }
    .account-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.05) !important;
        border-color: var(--indigo-brand) !important;
    }

    .btn-edit-pill {
        background: var(--indigo-soft); color: var(--indigo-brand);
        border: none; padding: 0.6rem 1.2rem; border-radius: 50px;
        font-weight: 700; font-size: 0.85rem; transition: all 0.2s;
        text-decoration: none; display: inline-flex; align-items: center;
    }
    .btn-edit-pill:hover { background: var(--indigo-brand); color: white; transform: scale(1.05); }

    /* Pro Card Specific */
    .pro-badge {
        background: #10b981; color: white; font-size: 0.65rem;
        padding: 0.2rem 0.6rem; border-radius: 6px; font-weight: 800;
        text-transform: uppercase; vertical-align: middle; margin-left: 8px;
    }
</style>

<div class="profile-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-auto">
                <div class="avatar-circle">
                    {{ user.notary ? user.notary.name|first|upper : user.email|first|upper }}
                </div>
            </div>
            <div class="col">
                <h1 class="fw-black text-dark mb-1">Mon Profil</h1>
                <div class="d-flex align-items-center gap-2">
                    <span class="text-muted small"><i class="fas fa-envelope me-1"></i> {{ user.email }}</span>
                    {% if is_granted('ROLE_NOTARY') %}
                        <span class="badge bg-indigo-soft text-indigo rounded-pill px-3 fw-bold small">Notaire</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} rounded-4 border-0 shadow-sm mb-4 animate__animated animate__fadeIn">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="row g-4 justify-content-center">
        
        {# --- FOCUS : GESTION ÉTUDE (Priorité UX) --- #}
        {% if user.notary %}
        <div class="col-lg-10">
            <div class="card account-card border-0 shadow-sm" style="background: linear-gradient(to right, #ffffff, #fcfdff);">
                <div class="card-body p-4 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                    <div class="d-flex align-items-center">
                        <div class="icon-circle bg-indigo-soft text-indigo rounded-circle p-3 me-3">
                            <i class="fas fa-briefcase fs-4"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold m-0 text-dark">Profil Professionnel <span class="pro-badge">Actif</span></h5>
                            <p class="text-muted small mb-0">Étude : <strong>{{ user.notary.name }}</strong> • {{ user.notary.city.name|default('Ville non définie') }}</p>
                        </div>
                    </div>
                    <div>
                        <a href="{{ path('app_notary_my_study') }}" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">
                            <i class="fas fa-cog me-2"></i>Paramètres de l'étude
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

        {# ACCÈS & SÉCURITÉ #}
        <div class="col-md-6 col-lg-5">
            <div class="card account-card border-0 h-100 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <h5 class="fw-bold m-0"><i class="fas fa-lock me-2 text-indigo"></i>Sécurité</h5>
                    </div>
                    <div class="mb-4">
                        <div class="info-label">Email de connexion</div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-bold text-dark">{{ user.email }}</span>
                            <a href="#" class="btn-edit-pill">Modifier</a>
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="info-label">Mot de passe</div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">••••••••••••</span>
                            <a href="#" class="btn-edit-pill">Changer</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# PRÉFÉRENCES #}
        <div class="col-md-6 col-lg-5">
            <div class="card account-card border-0 h-100 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <h5 class="fw-bold m-0"><i class="fas fa-sliders me-2 text-indigo"></i>Préférences</h5>
                    </div>
                    <div class="mb-4">
                        <div class="info-label">Ville de référence</div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-bold text-dark">
                                {{ user.city ? user.city.name ~ ' (' ~ user.city.postalCode ~ ')' : 'Non définie' }}
                            </span>
                            <button type="button" class="btn-edit-pill" data-bs-toggle="modal" data-bs-target="#editCityModal">Éditer</button>
                        </div>
                    </div>
                    <div>
                        <div class="info-label">Mes Accès</div>
                        <div class="d-flex flex-wrap gap-2 mt-1">
                            {% for role in user.roles %}
                                {% if role != 'ROLE_USER' %}
                                    <span class="badge bg-light text-indigo border fw-bold small py-2 px-3">{{ role|replace({'ROLE_': ''}) }}</span>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# ACTIONS SECONDAIRES #}
        <div class="col-lg-10 mt-4">
            <div class="p-4 bg-white rounded-4 border d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                <div class="text-muted small">
                    <i class="fas fa-shield-check text-success me-1"></i> Conforme au RGPD • Vos données sont chiffrées.
                </div>
                <div class="d-flex align-items-center gap-3">
                    <a href="#" class="text-muted small fw-bold text-decoration-none"><i class="fas fa-download me-1"></i>Exporter mes données</a>
                    <div class="vr d-none d-md-block"></div>
                    <a href="{{ path('app_logout') }}" class="text-danger small fw-bold text-decoration-none">Déconnexion</a>
                </div>
            </div>
        </div>

        {# DANGER ZONE #}
        <div class="col-lg-10 mt-2">
            <button class="btn btn-link btn-sm text-danger opacity-50 text-decoration-none w-100" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                Supprimer définitivement mon compte
            </button>
        </div>
    </div>
</div>

{{ include('user/_city_modal.html.twig') }}

{# Modal Suppression #}
<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow-lg p-4 text-center">
            <div class="bg-danger bg-opacity-10 text-danger rounded-circle p-3 d-inline-block mx-auto mb-3">
                <i class="fas fa-exclamation-triangle fs-2"></i>
            </div>
            <h4 class="fw-bold">Supprimer le compte ?</h4>
            <p class="text-muted">Attention, cette action est irréversible. Toutes vos simulations et données seront effacées.</p>
            <form action="{{ path('app_account_delete') }}" method="POST" class="d-grid gap-2 mt-3">
                <input type="hidden" name="_token" value="{{ csrf_token('delete-account') }}">
                <button type="submit" class="btn btn-danger rounded-pill fw-bold py-2">Supprimer définitivement</button>
                <button type="button" class="btn btn-light rounded-pill py-2" data-bs-dismiss="modal">Annuler</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}